# .env.example (auth-service)

##########################################
# Configuration serveur
##########################################

PORT=3002

##########################################
# Base de données PostgreSQL
##########################################

DB_HOST=auth-db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_NAME=auth_db

##########################################
# JWT et CORS
##########################################

JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

##########################################
# Identifiants OAuth (à renseigner)
##########################################

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

##########################################
# URLs des autres services
##########################################

INCIDENT_SERVICE_URL=http://incident-service:3003
ROUTE_SERVICE_URL=http://route-service:3004

##########################################
# Clé API interne (communication microservices)
##############
